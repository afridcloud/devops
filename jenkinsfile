pipeline {
   agent any
    tools { 
        maven 'Maven' 
    }
        stages {
            stage('Build') {
                steps {
                        sh "mvn clean compile"
                    }
            }

            stage('test') {
                steps {
                        sh "mvn clean test"
                    }
            }

            stage('package') {
                steps {
                        sh "mvn clean package"
                    }
            }

            stage('install') {
                steps {
                        sh "mvn clean install"
                        currentBuild.displayName = "The name."
                        currentBuild.description = "The best description."
                    }
            }
        }
}
